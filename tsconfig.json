{
  "compilerOptions": {
    "outDir": "build",
    "esModuleInterop": true,
    "target": "es2016",
    "lib": ["es2017", "esnext.asynciterable"],
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "strict": true,
    "moduleResolution": "node",
    "types": ["node", "jest"],
    "resolveJsonModule": true
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*.ts", "knexfile.ts"]
}
