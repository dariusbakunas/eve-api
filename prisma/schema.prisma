// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["evesde", "warehouse"]
}

model Character {
  id             Int      @id @default(autoincrement())
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  accessToken    String
  refreshToken   String
  tokenExpiresAt Int
  allianceId     Int?
  ancestryId     Int
  birthday       DateTime
  bloodlineId    Int
  corporationId  Int
  description    String?
  factionId      Int?
  gender         String
  name           String
  raceId         Int
  scopes         String
  securityStatus Int?
  title          String?
  totalSp        Int?

  @@schema("warehouse")
}
